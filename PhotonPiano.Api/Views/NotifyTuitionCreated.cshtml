@{
    var studentName = Model["studentName"];
    var className = Model["className"];
    var startDate = Model["startDate"];
    var endDate = Model["endDate"];
    var amount = Model["amount"];
    var deadline = Model["deadline"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Tuition Fee Notification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .email-container {
            background-color: #ffffff;
            padding: 20px;
            margin: 20px auto;
            width: 600px;
            border-radius: 8px;
            border: 1px solid #ddd;
        }

        .email-header {
            background-color: #4CAF50;
            color: white;
            padding: 10px 0;
            text-align: center;
            font-size: 24px;
            border-radius: 8px 8px 0 0;
        }

        .email-content {
            margin: 20px 0;
            font-size: 16px;
        }

        .details-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .details-table th, .details-table td {
                padding: 8px;
                text-align: left;
                border: 1px solid #ddd;
            }

        .footer {
            text-align: center;
            font-size: 14px;
            margin-top: 20px;
            color: #777;
        }

            .footer a {
                color: #4CAF50;
                text-decoration: none;
            }

            .footer p {
                margin: 10px 0;
            }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="email-header">
            New Tuition Fee Notification
        </div>

        <div class="email-content">
            <p>Hello @studentName,</p>

            <p>We are pleased to inform you that a new tuition fee has been created for your class. Please find the details below:</p>

            <table class="details-table">
                <tr>
                    <th>Current Class:</th>
                    <td>@className</td>
                </tr>
                <tr>
                    <th>Start Date:</th>
                    <td>@startDate</td>
                </tr>
                <tr>
                    <th>End Date:</th>
                    <td>@endDate</td>
                </tr>
                <tr>
                    <th>Total Amount:</th>
                    <td>@amount VND</td>
                </tr>
                <tr>
                    <th>Status:</th>
                    <td>Unpaid</td>
                </tr>
                <tr>
                    <th>Payment Deadline:</th>
                    <td>@deadline</td>
                </tr>
            </table>

            <p>Thank you for using PhotonPiano services. We look forward to serving you again!</p>
        </div>

        <div class="footer">
            <p>
                If you have any questions or need assistance, please contact our support team at <a href="mailto:support@photonpiano.com">support@photonpiano.com</a>.
            </p>
        </div>
    </div>
</body>
</html>
