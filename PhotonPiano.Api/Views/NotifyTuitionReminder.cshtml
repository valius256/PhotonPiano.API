@{
    var studentName = Model["studentName"];
    var className = Model["className"];
    var startDate = Model["startDate"];
    var endDate = Model["endDate"];
    var amount = Model["amount"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tuition Payment Reminder</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .email-container {
            background-color: #ffffff;
            padding: 20px;
            margin: 20px auto;
            width: 600px;
            border-radius: 8px;
            border: 1px solid #ddd;
        }

        .email-header {
            background-color: #FF9800;
            color: white;
            padding: 10px 0;
            text-align: center;
            font-size: 24px;
            border-radius: 8px 8px 0 0;
        }

        .email-content {
            font-size: 16px;
        }

        .details-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .details-table th, .details-table td {
                padding: 8px;
                text-align: left;
                border: 1px solid #ddd;
            }

        .footer {
            text-align: center;
            font-size: 14px;
            margin-top: 20px;
            color: #777;
        }

            .footer a {
                color: #FF9800;
                text-decoration: none;
            }

            .footer p {
                margin: 10px 0;
            }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="email-header">
            Tuition Payment Reminder
        </div>

        <div class="email-content">
            <p>Hello @studentName,</p>

            <p>This is a reminder regarding the tuition payment deadline for the class <strong>@className</strong>. Please ensure that your tuition payment is completed on time to maintain your enrollment in the course.</p>

            <table class="details-table">
                <tr>
                    <th>Class Name:</th>
                    <td>@className</td>
                </tr>
                <tr>
                    <th>Class Duration:</th>
                    <td>@startDate to @endDate</td>
                </tr>
                <tr>
                    <th>Tuition Amount:</th>
                    <td>@amount VND</td>
                </tr>
                <tr>
                    <th>Payment Deadline:</th>
                    <td><strong>@endDate</strong></td>
                </tr>
            </table>

            <p>If you have already made the payment, please disregard this email. Otherwise, please complete it as soon as possible.</p>

            <p>Thank you for continuing your journey with PhotonPiano!</p>
        </div>

        <div class="footer">
            <p>
                If you have any questions or need assistance, feel free to contact us at <a href="mailto:support@photonpiano.com">support@photonpiano.com</a>.
            </p>
        </div>
    </div>
</body>
</html>
