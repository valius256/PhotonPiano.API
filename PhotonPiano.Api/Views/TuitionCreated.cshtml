@{
    var studentName = Model.StudentName;
    var className = Model.ClassName;
    var startDate = Model.StartDate.ToString("dd/MM/yyyy");
    var endDate = Model.EndDate.ToString("dd/MM/yyyy");
    var amount = Model.Amount.ToString("N0") + " VND";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Tuition Fee Notification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .email-container {
            background-color: #ffffff;
            padding: 20px;
            margin: 20px auto;
            width: 600px;
            border-radius: 8px;
            border: 1px solid #ddd;
        }

        .email-header {
            background-color: #4CAF50;
            color: white;
            padding: 10px 0;
            text-align: center;
            font-size: 24px;
            border-radius: 8px 8px 0 0;
        }

        .email-content {
            font-size: 16px;
        }

        .details-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .details-table th, .details-table td {
                padding: 8px;
                text-align: left;
                border: 1px solid #ddd;
            }

        .footer {
            text-align: center;
            font-size: 14px;
            margin-top: 20px;
            color: #777;
        }

            .footer a {
                color: #4CAF50;
                text-decoration: none;
            }

            .footer p {
                margin: 10px 0;
            }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="email-header">
            New Tuition Fee Notification
        </div>

        <div class="email-content">
            <p>Hello @studentName,</p>

            <p>We are pleased to inform you that a new tuition fee has been created for your class <strong>@className</strong>.</p>
            <p><strong>Start Date:</strong> @startDate</p>
            <p><strong>End Date:</strong> @endDate</p>
            <p><strong>Amount Due:</strong> @amount</p>
            <p>Your current payment status is <strong>Unpaid</strong>.</p>
            <p>Thank you for being with PhotonPiano. If you have any questions, please contact our support team.</p>
            <p>Best regards,</p>
            <p><strong>The PhotonPiano Team</strong></p>
        </div>
    </div>
</body>
</html>
